<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :name %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.email_field :email %>

      <%= f.label :tel %>
      <%= f.telephone_field :tel %>

      <%= f.label :prefecture %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.select :prefecture, User.prefectures.keys, { prompt: "選択してください" }, class: "btn form-control" %>

      <%= f.label :password %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.password_field :password_confirmation %>



      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>