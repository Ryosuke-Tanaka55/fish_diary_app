<% provide(:title, "Edit") %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '更新') %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/model_error_messages', model: f.object %>
      
      <%= f.label :name %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :tel %>
      <%= f.telephone_field :tel, class: "form-control" %>

      <%= f.label :prefecture %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.select :prefecture, User.prefectures.keys, { prompt: "選択してください" }, class: "btn form-control prefecture-select" %>

      <%= f.label :password %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.label :必須, class: "form-require" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit  yield(:button_text), class: "btn btn-primary btn-block btn-user--edit" %>
    <% end %>
  </div>
</div>