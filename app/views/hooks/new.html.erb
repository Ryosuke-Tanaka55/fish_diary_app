<% provide(:title, 'Hook regist') %>
<% provide(:class_text, 'フック') %>
<% provide(:button_text, '新規登録') %>
<h1>フック新規登録</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <%= form_with(model: @hook, url: user_hooks_path(current_user), method: :post, local: true) do |f| %>
      <%= render 'shared/model_error_messages', model: @hook %>
      <table class="table table-bordered">
        <tbody class="bulk-registration-form">
        <tr>
          <th>フック</th>
          <th>メーカー</th>
        </tr>
          <div class="field">
            <td><%= f.text_field :hook_name, placeholder: "例.ST-46 スティンガートリプル #8", class: "form-control" %></td>
            <td><%= f.text_field :hook_maker, placeholder: "例.オーナーばり", class: "form-control" %></td>
        </tr>
        </tbody>
      </table>
      <div class="center">
        <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:button_text)}" %>
        <%= link_to "戻る", user_hooks_path(current_user), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>