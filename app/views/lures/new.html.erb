<% provide(:title, 'Lure regist') %>
<% provide(:class_text, 'ルアー') %>
<% provide(:button_text, '新規登録') %>
<h1>ライン新規登録</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <%= form_with(model: @lure, url: user_lures_path(current_user), method: :post, local: true) do |f| %>
      <%= render 'shared/model_error_messages', model: @lure %>
      <table class="table table-bordered">
        <tbody class="bulk-registration-form">
        <tr>
          <th>ルアー</th>
          <th>メーカー</th>
        </tr>
          <div class="field">
            <td><%= f.text_field :lure_name, placeholder: "例.エクスセンス サイレントアサシン 140F AR-C", class: "form-control" %></td>
            <td><%= f.text_field :lure_maker, placeholder: "例.シマノ", class: "form-control" %></td>
        </tr>
        </tbody>
      </table>
      <div class="center">
        <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:button_text)}" %>
        <%= link_to "戻る", user_lures_path(current_user), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>