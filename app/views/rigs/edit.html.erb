<% provide(:title, 'Edit Rig')%>
<% provide(:class_text, 'editrig') %>
<% provide(:button_update, '更新') %>
<% provide(:button_cancel, 'キャンセル') %>
<h1>リグ編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @rig, url: user_rig_path(@user.id, @rig.id), method: :patch, local: true) do |f| %>
      
      <%= f.label :rig, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :title, class: "form-control" %>

      <div class="button">
      <%= f.submit yield(:button_update), class: "btn btn-primary btn-#{yield(:button_update)}" %>
      <%= link_to "#{yield(:button_cancel)}", uuser_rigs_path(@user.id, @rig.id), class: "btn btn-default w-20" %>
      </div>
    <% end %>
  </div>
</div>